{% for defaults in sudo_defaults %}
Defaults      {{ defaults }}
{% endfor -%}
{%- if sudo_agent_forwarding %}
Defaults      env_keep+=SSH_AUTH_SOCK
{% endif %}

# User privilege specification
root ALL=(ALL) ALL
{% for user in sudo_users -%}
{{ user }} ALL=(ALL) {% if user in sudo_passwordless %}NOPASSWD:{% endif %}ALL
{% endfor %}

{% for group in sudo_groups -%}
# Members of the group '{{ group }}' may gain root privileges
%{{ group }} ALL=(ALL) {% if group in sudo_passwordless %}NOPASSWD:{% endif %}ALL
{% endfor %}

